{
  "name": "{{packageName}}",
  "version": "0.1.0",
  "description": "{{description}}",
  "author": "{{author}}",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": "./dist/cli.js",
  "files": ["dist"],
  "scripts": {
    "build": "tsdown src/index.ts src/cli.ts --format esm --sourcemap --platform node && tsc --declaration --emitDeclarationOnly --outDir dist",
    "dev": "tsx watch src/index.ts",
    "test": "npx tsx --test --test-concurrency=1 src/**/*.test.ts",
    "check": "biome check --write src/ && tsc --noEmit",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/node": "^24.10.12",
    "husky": "^9.1.7",
    "tsdown": "^0.20.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
